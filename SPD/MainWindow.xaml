<Window x:Name="okno" x:Class="SPD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPD"
        mc:Ignorable="d"
        SizeChanged="okno_SizeChanged"
        
        Title="MainWindow" Height="720" Width="1280" Icon="Icon1.ico">
    <Grid x:Name="grid" Margin="0,0,-8,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="361*"/>
            <ColumnDefinition Width="894*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Załaduj plik" HorizontalAlignment="Left" Height="46" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Click="Button_Click" Grid.ColumnSpan="2"/>
        <Button Content="Johnson" HorizontalAlignment="Left" Height="31" Margin="549,8,0,0" VerticalAlignment="Top" Width="126" Grid.Column="2" Click="Button_Click_2"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="443" Margin="0,96,0,0" VerticalAlignment="Top" Width="0"/>
        <TextBox x:Name="xd" HorizontalAlignment="Left" Height="37" Margin="64,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="113" Grid.Column="2"/>
        <ComboBox x:Name="combo1" HorizontalAlignment="Left" Margin="245,10,0,0" VerticalAlignment="Top" Width="134" Height="28" SelectionChanged="combo1_SelectionChanged" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="Seria danych:" HorizontalAlignment="Left" Height="31" Margin="145,10,0,0" VerticalAlignment="Top" Width="79" Grid.Column="1"/>
        <Button Content="Czyść" HorizontalAlignment="Left" Height="31" Margin="218,10,0,0" VerticalAlignment="Top" Width="126" Click="Rysuj" Grid.Column="2"/>
        <TextBox x:Name="kupa" HorizontalAlignment="Left" Height="78" Margin="387,6,0,0" TextWrapping="Wrap" Text="Permutacje" VerticalAlignment="Top" Width="134" Grid.Column="2"/>
        <Button Content="Permutacja" Grid.Column="2" HorizontalAlignment="Left" Height="31" Margin="697,8,0,0" VerticalAlignment="Top" Width="126"  Click="Button_Click_1"/>
        <Button Content="123" Grid.Column="2" HorizontalAlignment="Left" Height="31" Margin="549,61,0,0" VerticalAlignment="Top" Width="126"  Click="Button_Click_3"/>
        <Button Content="Generuj dane" Grid.Column="2" HorizontalAlignment="Left" Height="31" Margin="697,61,0,0" VerticalAlignment="Top" Width="126"  Click="Button_Click_Generuj"/>
    </Grid>
</Window>
